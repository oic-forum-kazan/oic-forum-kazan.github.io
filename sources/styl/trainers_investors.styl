.trainers-block,
.investors-block
  padding: 130px 30px 30px 30px
  font-family: 'Roboto'
  font-weight: bold

  &__wrapper
    position: relative
    left: 50%
    transform: translateX(-50%)
    width: 1000px

  &__header
    margin-bottom: 13px
    font-size: 64px
    line-height: 85px
    color: $black
    text-align: center

  &__persons
    clearfix()

  &__person
    position: relative
    float: left
    width: 250px
    height: 266px

    background-repeat: no-repeat
    background-size: cover
    background-position: center center

    &__bio
      position: absolute
      display: none
      padding: 24px 20px
      width: 100%
      height: 100%
      background: $white
      color: $black
      font-size: 14px
      line-height: 21px

      & b
        display: block
        margin-bottom: 5px
        font-size: 24px
        line-height: 32px
        font-family: 'Roboco'

    &:hover &__bio
      display: block