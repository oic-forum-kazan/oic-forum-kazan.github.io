.implementation-block
  padding: 130px 30px 30px 30px
  font-family: 'Roboto'
  font-weight: bold

  &__wrapper
    position: relative
    left: 50%
    width: 847px
    transform: translateX(-50%)

  &__header
    position: relative
    left: 50%
    transform: translateX(-50%)
    display: inline-block
    //border-bottom: 10px solid $black
    color: $black
    font-size: 64px
    line-height: 89px
    //font-size: 18px
    //line-height: 25px
    letter-spacing: 1px
    text-align: center

