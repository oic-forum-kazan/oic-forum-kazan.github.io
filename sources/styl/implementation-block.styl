  &__roadmap
    position: relative
    width: 847px
    height: 674px
    background-image: url('../images/icons/dots-large.svg')
    background-repeat: no-repeat
    background-position: 30px 30px

  &__day
    position: absolute
    width: 250px

    &--first
      top: 0
      left: 0
      width: 195px

    &--second
      top: 0
      left: 373px

    &--third
      top: 271px
      left: 480px

    &--fourth
      top: 271px
      left: 83px

    &--fifth
      top: 520px
      left: 280px

    &--sixth
      top: 520px
      left: 650px
      width: 205px


    &__counter
      position: relative
      left: 50%
      transform: translateX(-50%)
      width: 60px
      height: 60px
      border-radius(30px)
      background: $black
      font-size: 36px
      line-height: 60px
      text-align: center

      &--current
        background: $orange-yellow

    &__title,
    &__date
      text-transform: uppercase
      text-align: center
      margin-bottom: 5px

    &__title
      margin-top: 10px
      color: $black
      font-size: 18px
      letter-spacing: 1px
      line-height: 25px
      white-space: pre-line

    &__date
      margin-top: 20px
      color: $purpley-grey
      font-size: 14px
      letter-spacing: 0.5px
      line-height: 15px

  &__download,
  &__download:hover
    position: relative
    display: inline-block
    left: 50%
    transform: translate(-50%, -10px)
    color: $orange-yellow
    text-decoration: none
    font-size: 14px
    line-height: 15px
    text-align: center


