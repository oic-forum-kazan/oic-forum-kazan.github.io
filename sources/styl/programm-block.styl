.programm-block
  padding: 80px 30px 30px 30px
  color: $black
  font-family: 'Roboto'
  font-weight: bold

  &__wrapper
    position: relative
    left: 50%
    width: 1140px
    transform: translateX(-50%)
    background: white
    clearfix()

  &__photos
    height: 690px
    width: 535px
    float: left

  &__content
    width: 600px
    padding-top: 50px;
    padding-left: 30px
    float: left

    &__date
      font-size: 36px
      line-height: 49px

    &__part
      display: inline-block
      font-size: 18px
      line-height: 25px
      border-bottom: 10px solid $black

    &__header
      margin-top: 25px
      font-size: 48px
      line-height: 64px

    &__descr
      margin-top: 15px
      font-size: 18px
      line-height: 27px
      font-family: 'Roboto'
      white-space: pre-line

