.programm-block
  padding: 80px 30px 30px 30px
  color: $black
  font-family: 'Roboto'
  font-weight: bold

  &__wrapper
    position: relative
    left: 50%
    width: 1140px
    transform: translateX(-50%)
    background: white
    clearfix()

  &__photos
    height: 690px
    width: 535px
    float: left

  &__content
    width: 600px
    padding-top: 50px;
    padding-left: 30px
    float: left

    &__fh
      font-size: 36px
      line-height: 49px

    &__date
      font-size: 18px
      line-height: 25px

    &__part
      display: inline-block
      font-size: 18px
      line-height: 25px
      border-bottom: 10px solid $black

    &__header
      margin-top: 25px
      font-size: 48px
      line-height: 54px

    &__descr
      margin-top: 15px
      font-size: 24px
      line-height: 27px
      font-family: 'Roboto'
      font-weight: normal
      white-space: pre-line


@media (max-height: 670px)
  .programm-block
    padding-top: 70px

    &__photos
      height: 550px

    &__content
      padding-top: 30px

      &__descr
        margin-top: 10px
        font-size: 20px

