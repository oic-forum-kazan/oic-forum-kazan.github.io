.whocan-block
  padding: 80px 30px 30px 30px

  &__wrapper
    position: relative
    left: 50%
    width: 1140px
    transform: translateX(-50%)
    background: white

    clearfix()

  &__video
    position: relative
    height: 690px
    width: 535px
    float: left
    overflow: hidden

    &__turn
      position: absolute
      top: 20px
      left: 20px
      display: none
      width: 50px
      height: 50px
      background: url("../images/icons/close-cross.svg") no-repeat
      z-index: 3

    &--expanded &__turn
      display: block

    &__overlay
      position: absolute
      width: 100%
      height: 100%
      background: rgba(0, 0, 0, 0.42)
      z-index: 2

      &--hide
        display: none

    &__play,
    &__text
      position: relative
      left: 50%
      transform: translateX(-50%)
      color: $white

    &__play
      margin-top: 315px
      width: 88px
      height: 70px
      background: url('../images/icons/play.svg') no-repeat
      text-align: left

    &__text
      margin-top: 20px
      font-size: 18px
      line-height: 27px
      text-align: center

    & .vjs-control-bar
      display: none

    & .video-js
      width: 1140px
      height: 100%
      left: 50%
      transform: translateX(-50%)
      z-index: 1

    &--expanded
      position: absolute
      width: 100%

      & .vjs-control-bar
        display: flex

  &__video--expanded + &__content
    display: none

  &__content
    padding-left: 30px
    margin-top: 25px
    height: 100%
    width: 600px
    float: left

    &__header
      margin-top: 35px
      color: $black
      font-size: 64px
      line-height: 86px
      font-family: 'Roboto'
      font-weight: bold

    &__slides
      height: 300px

      & li
        white-space: pre-line
        width: 435px
        color: $black
        font-size: 24px
        line-height: 34px

        &:empty
          list-style-image: none


@media (max-height: 640px)
  .whocan-block
    padding-top: 70px

    &__content
      &__header
        margin-top: 0

    &__video
      height: 550px

      &__play
        margin-top: 225px
