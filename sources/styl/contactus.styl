.contactus-block
  padding: 130px 30px 30px 30px

  &__header
    color: $black
    font-size: 64px
    line-height: 86px
    font-family: 'Roboto'
    font-weight: bold
    text-align: center

  &__row
    position: relative
    left: 50%;
    margin-top: 40px
    max-width: 1140px;
    transform: translateX(-50%);

  &__col
    width: 272px

    &--contacts
      float: left
      margin-right: 50px

      & b,
      & a
        display: block
        color: $black
        font-size: 14px
        line-height: 15px

      & b
        margin-bottom: 10px

      & a
        margin-bottom: 20px
        padding-left: 30px
        height: 24px
        line-height: 24px
        text-decoration: none

    &__mails
      & a
        background: url('../images/icons/mail-icon.svg') no-repeat 0 center

    &__map
      & a
        padding-left: 20px
        background: url('../images/icons/map-icon.svg') no-repeat 0 center

    &--social
      float: right
      margin-left: 50px

      & a
        display: inline-block
        margin-right: 10px
        height: 20px

      & #fb
        width: 20px
        background: url('../images/icons/fb.svg') no-repeat center center

      & #vk
        width: 20px
        background: url('../images/icons/vk.svg') no-repeat center center

      & #tw
        width: 25px
        background: url('../images/icons/tw.svg') no-repeat center center

    &--form
      position: absolute
      top: 0
      left: 50%
      transform: translateX(-50%)
      width: 496px

      & input,
      & textarea,
      & button
        display: inline-block
        margin-bottom: 20px
        width: 496px
        background: $white-two
        color: $black
        border: 0
        outline: 0
        font-family: 'Roboto'
        font-weight: bold
        height: 60px
        font-size: 14px

        +placeholder()
          color: $purpley-grey
          font-family: 'Roboto'
          font-weight: bold
          text-transform: uppercase

      & input
        padding: 22px 15px
        line-height: 15px

      & textarea
        margin-bottom: 30px
        padding: 24px 15px
        height: 213px
        line-height: 15px

      & button
        height: 60px
        background: $orange-yellow
        color: $ochre
        line-height: 60px
        text-align: center
        letter-spacing: 1px
        border-radius(3px)



