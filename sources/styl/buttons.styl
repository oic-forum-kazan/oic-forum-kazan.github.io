.button
  display: inline-block
  border-radius(3px)
  background: $orange-yellow
  color: $white
  font-size: 18px
  line-height: 25px
  font-family: 'Roboto'
  font-weight: bold
  text-align: center

  &--join
    width: 230px
    height: 60px

    & a
      line-height: 60px


  &--header
    width: 190px
    height: 50px

    & a
      line-height: 50px

  & a
    display: block
    width: 100%
    height: 100%
    color: $white
    text-decoration: none
