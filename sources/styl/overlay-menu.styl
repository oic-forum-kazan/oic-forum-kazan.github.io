.overlay-menu
  position: fixed
  top: 0
  left: 0
  width: 0
  max-width: 500px
  height 100%
  background-color: rgba(255, 255, 255, .9)
  overflow-x: hidden
  transition(.5s)
  z-index: 1050

  &__closebtn
    position: relative
    left: 50%
    margin-top: 20px
    width: 35px
    height: 35px
    background: url("../images/icons/close-cross.svg") no-repeat
    background-size: cover
    transform: translateX(-50%)

  &__content
    position: relative
    left: 50%
    margin-top: 10px
    width: 350px
    transform: translateX(-50%)

    &__link
      display: block
      margin-top: 20px
      font-size: 36px
      line-height: 49px
      text-align: center
      font-family: 'Roboto'
      font-weight: bold
      color: $black


      &:hover
        color: $orange-yellow
        text-decoration: none

      &:active
        text-decoration: none


@media (max-height: 670px)
  .overlay-menu__content__link
    margin-top: 15px
