.overlay-menu
  position: fixed
  top: 0
  left: 0
  width: 0
  height 100%
  background-color: rgba(255, 255, 255, .9)
  overflow-x: hidden
  transition(.5s)
  z-index: 1050

  &__closebtn
    position: relative
    left: 50%
    margin-top: 40px
    width: 50px
    height: 50px
    background: url("../images/icons/close-cross.svg") no-repeat
    transform: translateX(-50%)

  &__content
    position: relative
    left: 50%
    margin-top: 10px
    width: 150px
    transform: translateX(-50%)

    &__link
      display: block
      margin-top: 30px
      font-size: 36px
      line-height: 49px
      text-align: center
      font-family: "Helvetica Bold"

      &:hover
        color: $orange-yellow
        text-decoration: none

